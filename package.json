{
  "name": "2pdf.js",
  "version": "2.0.0",
  "description": "Convert Markdown and HTML files to PDF with styling, token replacement, and content processing features",
  "main": "src/index.js",
  "bin": {
    "2pdf": "./bin/2pdf.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ bin/",
    "lint:fix": "eslint src/ bin/ --fix",
    "build": "npm run lint && npm test",
    "install-global": "npm install -g .",
    "dev": "nodemon src/index.js"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "pandoc",
    "chrome",
    "puppeteer",
    "documentation",
    "token-replacement",
    "styling"
  ],
  "author": "Ziad Ezzat <ziad@feralcreative.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/feralcreative/md-to-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/feralcreative/md-to-pdf/issues"
  },
  "homepage": "https://github.com/feralcreative/md-to-pdf#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "puppeteer": "^21.0.0",
    "marked": "^9.0.0",
    "marked-footnote": "^1.2.2",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.0.0",
    "path": "^0.12.7",
    "glob": "^10.0.0",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0",
    "@types/node": "^20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
